<Window x:Class="CRM.WPF.Views.CmaPlugin.PropertyFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CRM.WPF.ViewModels.CmaPlugin"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:PropertyFormViewModel, IsDesignTimeCreatable=True}"
        Title="CMA Plugin - Property Input"
        Height="650" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Styles for consistent UI -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Comparative Market Analysis - Property Input"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Scrollable Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Required Fields Section -->
                <TextBlock Text="Required Information" Style="{StaticResource SectionHeaderStyle}"/>
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Address -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Address: *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5"/>

                        <!-- Operation -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Operation: *" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Row="1" Grid.Column="1"
                                  SelectedItem="{Binding Operation}"
                                  Margin="0,5" Padding="5">
                            <ComboBoxItem Content="ARRIENDO" IsSelected="True"/>
                            <ComboBoxItem Content="VENTA"/>
                        </ComboBox>

                        <!-- Area Habitable -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Area Habitable (m²): *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding AreaHabitable, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5"/>

                        <!-- Bedrooms -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Bedrooms: *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="{Binding Bedrooms, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5"/>

                        <!-- Bathrooms -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Bathrooms: *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding Bathrooms, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5"/>

                        <!-- Price per m² -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Price per m² (COP): *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="5" Grid.Column="1"
                                 Text="{Binding PricePerM2, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5"/>
                    </Grid>
                </Border>

                <!-- Optional Fields Section -->
                <TextBlock Text="Optional Information" Style="{StaticResource SectionHeaderStyle}"/>
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Row 1 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Area Total (m²):" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding AreaTotal, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5,10,5"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Parking:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="0" Grid.Column="3"
                                 Text="{Binding Parking, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5"/>

                        <!-- Row 2 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Stratum (1-6):" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding Stratum, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5,10,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Floor:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="1" Grid.Column="3"
                                 Text="{Binding Floor, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5"/>

                        <!-- Row 3 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Construction Age:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding ConstructionAge, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5,10,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="2" Text="Administration:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="2" Grid.Column="3"
                                 Text="{Binding Administration, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5"/>

                        <!-- Row 4 - Checkboxes -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5">
                            <CheckBox Content="Terrace" IsChecked="{Binding Terrace}" Margin="0,0,15,0"/>
                            <CheckBox Content="Elevator" IsChecked="{Binding Elevator}" Margin="0,0,15,0"/>
                            <CheckBox Content="Walking Closet" IsChecked="{Binding WalkingCloset}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5">
                            <CheckBox Content="Loft" IsChecked="{Binding Loft}" Margin="0,0,15,0"/>
                            <CheckBox Content="Study Room" IsChecked="{Binding StudyRoom}"/>
                        </StackPanel>

                        <!-- Row 5 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Deposit:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding Deposit, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5,10,5"/>

                        <TextBlock Grid.Row="4" Grid.Column="2" Text="Interior/Exterior:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Row="4" Grid.Column="3"
                                  SelectedItem="{Binding InteriorExterior}"
                                  Margin="0,5" Padding="5">
                            <ComboBoxItem Content="" IsSelected="True"/>
                            <ComboBoxItem Content="I"/>
                            <ComboBoxItem Content="E"/>
                        </ComboBox>

                        <!-- Row 6 - Quality Ratings -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Finish Quality (1-5):" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="5" Grid.Column="1"
                                 Text="{Binding FinishQuality, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5,10,5"/>

                        <TextBlock Grid.Row="5" Grid.Column="2" Text="Location Quality (1-5):" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="5" Grid.Column="3"
                                 Text="{Binding LocationQuality, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Margin="0,5"/>
                    </Grid>
                </Border>

                <!-- Observations -->
                <TextBlock Text="Observations" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBox Text="{Binding Observations, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="80"
                         Padding="5"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Validation Errors -->
        <ItemsControl Grid.Row="2"
                      ItemsSource="{Binding ValidationErrors}"
                      Margin="0,10">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                               Foreground="Red"
                               FontSize="12"
                               Margin="0,2"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Clear"
                    Command="{Binding ClearCommand}"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="Submit"
                    Command="{Binding SubmitCommand}"
                    Width="100"
                    Height="35"
                    IsEnabled="{Binding IsFormValid}"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>

        <!-- Busy Indicator Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="4"
              Background="#80000000"
              Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                <TextBlock Text="Processing..."
                           Foreground="White"
                           FontSize="14"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
